@model IEnumerable<Projekt_Meteo_Stations.Models.StationStatus>

@{
    ViewData["Title"] = "Lista statusów stacji";
}

<h1>Lista dostępnych statusów stacji</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Dodaj nowy status</a>
</p>
<table class="table table-dark table-hover table-sm text-light">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th class="text-center">Dostępne akcje</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.StationStatusID" class="btn btn-secondary">Edytuj</a>
                <a asp-action="Delete" asp-route-id="@item.StationStatusID" class="btn btn-danger">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
