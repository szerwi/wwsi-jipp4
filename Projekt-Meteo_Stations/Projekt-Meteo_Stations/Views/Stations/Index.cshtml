@model IEnumerable<Projekt_Meteo_Stations.Models.Station>

@{
    ViewData["Title"] = "Lista stacji meteorologicznych";
}

<h1>Lista stacji meteorologicznych</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Dodaj nową stację</a>
</p>
<table class="table table-dark table-hover text-light">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Location)
            </th>
                <th class="text-center">
                @Html.DisplayNameFor(model => model.StationStatus)
            </th>
            <th class="text-center">Dostępne akcje</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.StationStatus.Status)
            </td>
            <td class="text-center">
                <a asp-action="Details" asp-route-id="@item.StationID" class="btn btn-primary">Szczegóły</a>
                <a asp-action="Edit" asp-route-id="@item.StationID" class="btn btn-secondary">Edytuj</a>
                <a asp-action="Delete" asp-route-id="@item.StationID" class="btn btn-danger">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
