@model Projekt_Meteo_Stations.Models.Station

@{
    ViewData["Title"] = "Edycja stacji meteorologicznej";
}

<h1>Edycja</h1>

<h4>Stacja meteorologiczna</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StationID" />
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StationStatusID" class="control-label"></label>
                <select asp-for="StationStatusID" class="form-control" asp-items="ViewBag.StationStatusID"></select>
                <span asp-validation-for="StationStatusID" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 15px;">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-light">Powrót do listy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
